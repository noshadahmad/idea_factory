  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @idea do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
